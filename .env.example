# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
APP_NAME=RoR Trader
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Server Ports
PORT=4000
WEB_PORT=3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key-change-this
SESSION_SECRET=your-session-secret-change-this

# Database
DATABASE_URL=postgresql://rortrader:password@localhost:5432/rortrader?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
BULL_QUEUE_PREFIX=rortrader

# Email (for notifications)
# For development, use Mailpit on localhost:1026
SMTP_HOST=localhost
SMTP_PORT=1026
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
EMAIL_FROM=noreply@ror-trader.com

# Exchange API Keys (encrypted before storage)
# These are only used for initial setup/testing
# NEVER commit actual API keys
COINBASE_API_KEY=
COINBASE_API_SECRET=
ALPACA_API_KEY=
ALPACA_API_SECRET=

# KMS Configuration (for production)
KMS_KEY_ID=
AWS_REGION=us-east-1

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RATE_LIMIT_PER_BOT=10

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000

# Trading Configuration
MAX_POSITION_SIZE_USD=10000
MAX_DAILY_LOSS_USD=1000
ORDER_EXECUTION_TIMEOUT_MS=2000

# Subscription Tiers
FREE_MAX_BOTS=1
FREE_WEBHOOKS_PER_DAY=100
BASIC_MAX_BOTS=5
BASIC_WEBHOOKS_PER_DAY=1000
PRO_MAX_BOTS=20
PRO_WEBHOOKS_PER_DAY=10000
ELITE_MAX_BOTS=50
ELITE_WEBHOOKS_PER_DAY=50000

# Stripe (for payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Development
DEV_MOCK_DATA=true
DEV_DEMO_MODE=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_PAPER_TRADING=true
FEATURE_LIVE_TRADING=false
FEATURE_ANALYTICS=true
FEATURE_EXPORT=true

# Coach Evaluation (trading assistant)
COACH_EVALUATOR_CONCURRENCY=2
COACH_HEARTBEAT_MS=5000
