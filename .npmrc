# npm configuration

# Use exact versions to avoid unexpected updates
save-exact=false

# Set npm log level (error, warn, info, verbose, silly)
loglevel=warn

# Disable package-lock for workspaces (we use npm workspaces)
package-lock=true

# Engine strict mode - enforce Node version
engine-strict=true

# Audit level - only fail on high severity
audit-level=high

# Don't show funding messages
fund=false

# Legacy peer deps for compatibility
legacy-peer-deps=true
