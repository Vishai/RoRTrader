{
  "name": "@ror-trader/api",
  "version": "0.1.0",
  "private": true,
  "description": "RoR Trader API Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern=security",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/database/seed.ts",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.0",
    "express-rate-limit": "^7.1.0",
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.0",
    "jsonwebtoken": "^9.0.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.0",
    "joi": "^17.11.0",
    "bull": "^4.11.0",
    "ioredis": "^5.3.0",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "socket.io": "^4.7.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/compression": "^1.7.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/speakeasy": "^2.0.0",
    "@types/qrcode": "^1.5.0",
    "@types/bull": "^4.10.0",
    "@types/crypto-js": "^4.2.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "nodemon": "^3.0.0",
    "prisma": "^5.6.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsc-alias": "^1.8.0",
    "module-alias": "^2.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@/modules": "dist/modules",
    "@/shared": "dist/shared"
  }
}
